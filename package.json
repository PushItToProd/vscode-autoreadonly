{
  "name": "code-auto-readonly",
  "displayName": "Auto-Readonly",
  "description": "Automatically make editors read only when files match a pattern.",
  "repository": {
    "type": "git",
    "url": "github:PushItToProd/vscode-autoreadonly"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Auto-Readonly",
        "properties": {
          "autoReadOnly.files": {
            "type": "object",
            "default": {
              "**/node_modules/*": true,
              "**/venv/**": true,
              "**/.venv/**": true,
              "/home/linuxbrew/**": true,
              "/opt/homebrew/**": true,
              "/home/*/go/pkg/**": true,
              "/Users/*/go/pkg/**": true
            },
            "markdownDescription": "Glob patterns of files to make read only when opened. To match an arbitrary file name like `*noedit*`, be sure to use a leading double star: `**/*noedit*`.",
            "scope": "resource"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
